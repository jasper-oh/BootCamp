<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F51B5"

        >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="123,456,789"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="italic|bold"
            android:gravity="right"
         />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        

    >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btnCE"
            android:layout_width="wrap_content"
            android:layout_height="170px"
            android:text="CE"
            android:backgroundTint="#DAD0D0"/>

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="C"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"
            />

        <Button
            android:id="@+id/btnDEL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="DEL"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"
            />
        <Button
            android:id="@+id/btnPOW"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="POW"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="170px"
            android:text="7"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="170px"
            android:text="4"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btnMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="170px"
            android:text="1"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="3"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btnMult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="*"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="170px"
            android:text="0"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="."
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="="
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>
        <Button
            android:id="@+id/btnSlash"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:backgroundTint="#DAD0D0"
            android:layout_marginLeft="5px"/>

    </LinearLayout>
</LinearLayout>

</LinearLayout>